@model AuthApp.ViewModels.EditTravelTimeModel
@{
    //ViewData["Title"] = "Product list";
    //Layout = null;
}
@section Logout {
    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
}
<!DOCTYPE html>
<html>
<head>
    <title>Electronics Store</title>
</head>
<body>
    <h3>Edit time</h3>
    <form asp-action="SaveTime" asp-controller="Admin" asp-route-flightID="@ViewBag.FlightID" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label hidden asp-for="ID">ID: </label>
            <label hidden asp-for="ID">@ViewBag.TravelTime.idTravelTime</label>
            <input type="number" hidden asp-for="ID" value="@ViewBag.TravelTime.idTravelTime" />
        </div>
        <div>
            <label asp-for="ArrivalDate">Arrival Date:</label>
            <input type="date" asp-for="ArrivalDate" value="@ViewBag.TravelTime.ArrivalTime.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="ArrivalDate" />
        </div>
        <div>
            <label asp-for="ArrivalTime">Arrival Time:</label>
            <input type="time" asp-for="ArrivalTime" value="@ViewBag.TravelTime.ArrivalTime.ToShortTimeString()" />
            <span asp-validation-for="ArrivalTime" />
        </div>
        <div>
            <label asp-for="DepartureDate">Departure Date:</label>
            <input id="date" type="date" asp-for="DepartureDate" value="@ViewBag.TravelTime.DepartureTime.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DepartureDate" />
        </div>
        <div>
            <label asp-for="DepartureTime">Departure Time:</label>
            <input type="time" asp-for="DepartureTime" value="@ViewBag.TravelTime.DepartureTime.ToShortTimeString()" />
            <span asp-validation-for="DepartureTime" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-dark" />
        </div>
    </form>
</body>
</html>