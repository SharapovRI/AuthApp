@model AuthApp.ViewModels.EditEmployeeModel
@section Logout {
    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
}
<!DOCTYPE html>
<html>
<head>
    <title>Electronics Store</title>
</head>
<body>
    <h3>Flights</h3>
    <form asp-action="Editing" asp-controller="Manager" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Ident">Ident:</label>
            <input type="number" hidden asp-for="Ident" value="@ViewBag.EditingEmployee.Id" />
            <span asp-validation-for="Ident" />
        </div>
        <div>
            <label asp-for="Name">Name:</label>
            <input type="text" asp-for="Name" value="@ViewBag.EditingEmployee.Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Surname">Surname:</label>
            <input type="text" asp-for="Surname" value=@ViewBag.EditingEmployee.Surname />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Post">Post:</label>
            <label asp-for="Post">@ViewBag.EditingEmployee.GetType().Name</label>
            <input hidden asp-for="Post" value="@ViewBag.EditingEmployee.GetType().Name" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-dark" />
        </div>
    </form>
</body>
</html>